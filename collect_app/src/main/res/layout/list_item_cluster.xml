<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/CardView.Light"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/card_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            app:srcCompat="@drawable/ic_place_black"
            android:tint="@color/black"/>



        <TextView
            android:id="@+id/tv_list_item_title"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_toEndOf="@id/card_icon"
            android:layout_toRightOf="@id/card_icon"
            android:maxLines="2"
            android:minLines="1"
            android:text="Title"
            android:textColor="@color/colorPrimaryTextDefaultMaterialLight" />

        <TextView
            android:id="@+id/tv_list_item_desc"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_list_item_title"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_toEndOf="@id/card_icon"
            android:layout_toRightOf="@id/card_icon"
            android:maxLines="1"
            android:minLines="1"
            android:text="Subtitle"
            android:textColor="@color/textColor" />


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_extra_large"
            android:layout_marginRight="@dimen/margin_extra_large"
            app:srcCompat="@drawable/ic_keyboard_arrow_24dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>